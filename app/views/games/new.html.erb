<h1>New game</h1>
<p><%= @letters %></p>
<p>What is the longest word you can find ?</p>
<form action="/score" method="post" data-turbo="false">
  <input class="form-control-sm" type="text" name="word">
  <div class="d-none"><input type="text" name="letters" value= <%= @letters %>></div>
  <input class="form-control-sm" type="submit" value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
